<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="580" prefWidth="1150" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicplayer.HelloController">
    <!-- Top bar with search field -->
    <HBox alignment="TOP_LEFT" prefHeight="94.0" prefWidth="896.0" spacing="10">
        <Button onAction="#searchClick" text="Søg:">
         <HBox.margin>
            <Insets left="30.0" top="20.0" />
         </HBox.margin></Button>
        <TextField fx:id="searchField" alignment="CENTER" prefWidth="300.0" promptText="Søg efter sang eller kunstner">
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin></TextField>
    </HBox>

    <!-- Main content: Playlist and Headers -->
    <HBox prefHeight="382.0" prefWidth="870.0" spacing="10" VBox.vgrow="ALWAYS">
        <!-- Playlist Section -->
        <VBox prefWidth="200.0" spacing="5">
            <Label alignment="CENTER" prefHeight="61.0" prefWidth="194.0" style="-fx-background-color: #D2B48C;" text="Playlist" />
            <ScrollPane fitToWidth="true" prefHeight="323.0" prefWidth="200.0">
                <ListView fx:id="playlistListView" />
            </ScrollPane>
            <HBox spacing="5">
                <TextField fx:id="playlistNameTextField" promptText="Playlist" HBox.hgrow="ALWAYS" />
                <Button onAction="#addPlaylistClick" text="Add" />
            </HBox>
        </VBox>

        <!-- Headers and Songs List Section -->
        <VBox prefHeight="357.0" prefWidth="624.0" spacing="10">
            <!-- Headers -->
            <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: #D2B48C;">
                <VBox>
                    <!-- Add Song Button -->
                    <Button alignment="CENTER" onAction="#openAddSongStage" prefWidth="120.0" style="-fx-background-color: #D2B48C;" text="Tilføj Sang" />
                    <Label alignment="CENTER" prefWidth="300.0" text="Sang" />
                </VBox>
                <Label prefWidth="190.0" text="Kunstner" />
                <Label prefWidth="140.0" text="Varighed" />
            </HBox>
            <!-- Songs List -->
            <ListView fx:id="songsListView" prefHeight="330.0" prefWidth="635.0" />
        </VBox>
      <Pane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #C0C0C0;">
         <children>
            <ImageView fx:id="songImageView" fitHeight="300.0" fitWidth="300.0" layoutY="25.0" pickOnBounds="true" preserveRatio="false">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </children>
      </Pane>
    </HBox>

    <!-- Now Playing Section -->
    <VBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="834.0" spacing="10">
        <Label style="-fx-background-color: #C0C0C0;" text="Spiller nu:">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Label>
        <Label fx:id="currentSongLabel" style="-fx-background-color: #C0C0C0;" text="Sang: [Ingen sang valgt]" />
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </VBox>

    <!-- Controls and Sliders -->
    <VBox spacing="10">
        <HBox alignment="CENTER" spacing="10">
            <Button id="ForrigeID" onAction="#handlePreviousButtonAction" style="-fx-background-color: #C0C0C0;" text="⏮ Forrige" />
            <Button id="PauseID" onAction="#handlePlayPauseButtonAction" style="-fx-background-color: #C0C0C0;" text="⏯ Afspil/Pause" />
            <Button id="StopID" onAction="#handleStopButtonAction" style="-fx-background-color: #C0C0C0;" text="◼" />
            <Button id="NæsteID" onAction="#handleNextButtonAction" style="-fx-background-color: #C0C0C0;" text="⏭ Næste">
            <HBox.margin>
               <Insets right="60.0" />
            </HBox.margin></Button>
             <Label alignment="CENTER_RIGHT" text="Lydstyrke">
            <HBox.margin>
               <Insets left="25.0" top="25.0" />
            </HBox.margin></Label>
        </HBox>
        <HBox alignment="CENTER" prefHeight="81.0" prefWidth="834.0" spacing="20">
            <Slider fx:id="timeSlider" prefWidth="400.0">
            <HBox.margin>
               <Insets top="-50.0" />
            </HBox.margin></Slider>
            <VBox alignment="CENTER" prefHeight="38.0" prefWidth="109.0" spacing="5">
                <Slider fx:id="volumeSlider" prefWidth="100.0">
               <VBox.margin>
                  <Insets top="-50.0" />
               </VBox.margin></Slider>
            </VBox>
        </HBox>
    </VBox>
</VBox>
