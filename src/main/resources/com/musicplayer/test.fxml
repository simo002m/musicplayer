<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="833.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicplayer.HelloController">
   <!-- Top bar with search field -->
   <HBox layoutX="20.0" layoutY="29.0" prefHeight="40.0" prefWidth="760.0" spacing="10">
      <Button onAction="#searchClick" text="Søg:" />
      <TextField id="SearchID" fx:id="searchField" promptText="Søg efter sang eller kunstner" />
   </HBox>

   <!-- Now Playing section -->
   <VBox layoutX="20" layoutY="400" spacing="10" />

   <!-- Control buttons -->
   <HBox layoutX="20" layoutY="500" spacing="20" />

