   <Label id="SpillernuID" layoutX="20.0" layoutY="491.0" style="-fx-background-color: #C0C0C0;" text="Spiller nu:" />
 <AnchorPane layoutX="240.0" layoutY="131.0" minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
      <children>
         <SplitPane layoutX="-54.0" layoutY="-21.0" orientation="VERTICAL" prefHeight="300.0" prefWidth="624.0">
           <items>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                  <children>
                  
                                 <!-- Playlist table -->
                  
                                 <TableView fx:id="playlistTable" layoutX="-4.0" layoutY="-1.0" prefHeight="72.0" prefWidth="632.0">
                        <columns>
                           <TableColumn prefWidth="303.0000305175781">
                              <columns>
                                 <TableColumn id="SangID" prefWidth="300.0" style="-fx-background-color: #D2B48C;" text="Sang:" />
                              </columns>
                              <graphic>
                                 <Button fx:id="addSong" mnemonicParsing="false" prefHeight="38.0" prefWidth="310.0" style="-fx-background-color: #D2B48C;" text="Add song" />
                              </graphic>
                           </TableColumn>
                           <TableColumn id="KunstnerID" prefWidth="190.60000610351562" style="-fx-background-color: #D2B48C;" text="Kunstner:" />
                           <TableColumn id="VarighedID" prefWidth="140.79997558593755" style="-fx-background-color: #D2B48C;" text="Varighed:" />
                        </columns>
                     </TableView>
                     <ListView fx:id="songsListView" layoutY="71.0" prefWidth="632" />
                  </children>
               </AnchorPane>
           </items>
         </SplitPane>
      </children>
   </AnchorPane>

   <style>
      #addSong:hover {
         -fx-background-color: red;
      }
   </style>
</AnchorPane>
